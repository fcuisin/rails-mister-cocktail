<nav class="navbar navbar-light bg-white">
  <a class="navbar-brand" href="/cocktails">FindMyCocktail.com</a>
  <form class="form-inline">
    <%= link_to "Create a new cocktail", new_cocktail_path, class: "btn btn-outline-success" %>
  </form>
</nav>

<div class="home-banner position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center">
  <div class="col-md-5 p-lg-5 mx-auto my-5">
    <h1 class="display-4 font-weight-normal">An oasis of cocktails</h1>
  </div>
</div>

<div class="home-card card-group m-5">
  <% @cocktails.each do |cocktail| %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail)  %></h5>
      </div>
      <div class="card-footer">
        <small class="text-muted">Last updated 3 mins ago</small>
      </div>
    </div>
  <% end %>
</div>




